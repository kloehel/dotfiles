[user]
  name = Jürgen Löhel
  email = jloehel@suse.com

[core]
  editor = vim
  excludesfile = ~/.gitignore
  whitespace = trailing-space,space-before-tab

[help]
  autocorrect = 1

[alias]
  a = commit -a
  down = pull --rebase --stat
  vader = push --force

[push]
  default = matching

[apply]
  whitespace = fix

[color]
  ui = true

[url "git://github.com/jloehel/"]
  insteadOf = jloehel:
[url "git@github.com:jloehel/"]
  pushInsteadOf = jloehel:

[url "git://github.com/"]
    insteadOf = github:
[url "git@github.com"]
    pushInsteadOf = github:
